form(id="form-note" class="form-horizontal form-modal" role="form" method="POST")
    div(class="form-group")
        input(id="title" name="title" class="form-control form-title title" type="text" placeholder="Title")
    div(class="form-group d-flex justify-content-end flex-wrap")
        input(id="description" name="description" class="form-control display-1 description" type="text" placeholder="Note...")
        input#modal-save(type="button" value="save")